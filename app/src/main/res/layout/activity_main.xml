<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bliss_000.photo_capture_firebase_upload.MainActivity">

    <ImageView
        android:id="@+id/imageToShow"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:contentDescription="@string/image_display_description"
        app:srcCompat="?attr/colorControlActivated"
        android:layout_marginTop="67dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/signInBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageToShow"
        android:layout_alignStart="@+id/imageToShow"
        android:layout_below="@+id/imageToShow"
        android:layout_marginTop="45dp"
        android:text="@string/sign_in" />

    <Button
        android:id="@+id/UploadBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageToShow"
        android:layout_alignRight="@+id/imageToShow"
        android:layout_alignTop="@+id/signInBtn"
        android:text="@string/upload" />

</RelativeLayout>
